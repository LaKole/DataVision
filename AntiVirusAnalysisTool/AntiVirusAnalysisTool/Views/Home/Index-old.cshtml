@Styles.Render("~/Content/css")
<title>AV Analytics</title>
<div class="container ">

    <div class="row" align="center">
        <div class="col-md-12">
            <h2>Antivirus Analytics</h2>
        </div>
    </div>

    <div class="row">

        <div id="chartSelector" class="col-md-12">
            <button type="button" class="btn btn-info" style="margin:1px 0px" value="bar">Bar</button>
            <button type="button" class="btn btn-info" style="margin:1px 0px" value="column">Column</button>
            <button type="button" class="btn btn-info" style="margin:1px 0px" value="stackedBar">Stacked Bar</button>
            <button type="button" class="btn btn-info" style="margin:1px 0px" value="stackedColumn">Stacked Column</button>
            <button type="button" class="btn btn-info" style="margin:1px 0px" value="area">Area</button>
            <button type="button" class="btn btn-info" style="margin:1px 0px" value="stackedArea">Stacked Area</button>
            <button type="button" class="btn btn-info" style="margin:1px 0px" value="line">Line</button>
            <button type="button" class="btn btn-info" style="margin:1px 0px" value="pie">Pie</button>
            <button type="button" class="btn btn-info" style="margin:1px 0px" value="3dPie">3d Pie</button>
            <button type="button" class="btn btn-info" style="margin:1px 0px" value="donutPie">Donut Pie</button>
            <button type="button" class="btn btn-info" style="margin:1px 0px" value="table">Table</button>

            <button type="button" class="btn btn-info" style="margin:1px 0px" value="heatmap">HeatMap</button>



            @*<button type="button" class="btn btn-info" style="margin:1px 0px" value="waterfall">Waterfall</button>*@
            @*<button type="button" class="btn btn-info" style="margin:1px 0px" value="treemap">Tree Map</button>*@
            @*<button type="button" class="btn btn-info" style="margin:1px 0px" value="series">Series</button>*@
        </div>

    </div>

    <div class="row">

        <div id="chartData">

            <div class="col-md-9">
                <div id="chart_div" style="height:500px;"></div>
                <div id="loadingGif" style="position:absolute; vertical-align:central; top: 50px; display:none"><img src="http://www.wwalliance.com/include/images/loading_with_fade.gif" height="80" width ="80" /></div>
            </div>
            <div class="col-md-3">

                <div class="panel-group" id="panelOptions">

                    <div class="panel panel-default">
                        <div class="panel-heading">
                            <h4 class="panel-title">
                                <a data-toggle="collapse" data-parent="#panelOptions" href="#chartOptions">Chart Options</a>
                            </h4>
                        </div>
                        <div class="panel-collapse collapse" data-chartop="matrixOp">
                            <div class="panel-body">

                                <label class="control-label">Columns</label>
                                <div class="selectContainer">
                                    <select class="form-control" id="column" onchange="updateOptions()">
                                        <option value="Antivirus">Antivirus</option>
                                        <option value="Scandate">ScanDate</option>
                                    </select>
                                </div>

                                <label class="control-label">Rows</label>
                                <div class="selectContainer">
                                    <select class="form-control" id="row" onchange="updateOptions()">
                                        <option value="Scandate">ScanDate</option>
                                        <option value="Antivirus">Antivirus</option>
                                        <option value="MD5">Malware</option>
                                    </select>
                                </div>

                                <label class="control-label">Grouped By</label>
                                <input type="text" class="form-control" id="groupby" disabled value="MD5" />


                                <label class="control-label">Detection Type</label>
                                <div class="selectContainer">
                                    <select class="form-control" id="detection" onchange="updateOptions()">
                                        <option value="1">Failure</option>
                                        <option value="0">Success</option>
                                    </select>
                                </div>


                                <label class="control-label">Antivirus Version</label>
                                <div class="selectContainer">
                                    <select class="form-control" id="version" onchange="updateOptions()">
                                        <option value="avr">Full Capability</option>
                                        <option value="malware">Virus Total</option>
                                    </select>
                                </div>


                            </div>
                        </div>


                        <div class="panel-collapse collapse" data-chartop="quantOp">
                            <div class="panel-body">

                                <label class="control-label">Key</label>
                                <div class="selectContainer">
                                    <select class="form-control" id="keyOp" onchange="updateOptions()">
                                        <option value="Antivirus">Antivirus</option>
                                        <option value="version">Version</option>
                                    </select>
                                </div>

                                <label class="control-label">X-Axis</label>
                                <div class="selectContainer">
                                    <select class="form-control" id="xaxisOp" onchange="updateOptions()">
                                        <option value="Scandate">ScanDate</option>
                                        <option value="Antivirus">Antivirus</option>
                                    </select>
                                </div>


                                <label class="control-label">Detection Type</label>
                                <div class="selectContainer">
                                    <select class="form-control" id="detectionOp" onchange="updateOptions()">
                                        <option value="1">Failure</option>
                                        <option value="0">Success</option>
                                    </select>
                                </div>


                                <label class="control-label">Antivirus Version</label>
                                <div class="selectContainer">
                                    <select class="form-control" id="versionOp" onchange="updateOptions()">
                                        <option value="avr">Full Capability</option>
                                        <option value="malware">Virus Total</option>
                                    </select>
                                </div>


                            </div>
                        </div>

                        <div class="panel-collapse collapse" data-chartop="pieOp">
                            <div class="panel-body">

                                <label class="control-label">Key</label>
                                <div class="selectContainer">
                                    <select class="form-control" id="keyOp" onchange="updateOptions()">
                                        <option value="Antivirus">Antivirus</option>
                                        @*<option value="version">Version</option>*@
                                    </select>
                                </div>

                                <label class="control-label">Slice</label>
                                <div class="selectContainer">
                                    <select class="form-control" id="sliceOp" onchange="updateOptions()">
                                        <option value="Scandate">ScanDate</option>
                                        <option value="Antivirus">Antivirus</option>
                                        <option value="MD5">Malware</option>
                                    </select>
                                </div>


                                <label class="control-label">Detection Type</label>
                                <div class="selectContainer">
                                    <select class="form-control" id="detectionOp" onchange="updateOptions()">
                                        <option value="1">Failure</option>
                                        <option value="0">Success</option>
                                    </select>
                                </div>


                                <label class="control-label">Antivirus Version</label>
                                <div class="selectContainer">
                                    <select class="form-control" id="versionOp" onchange="updateOptions()">
                                        <option value="avr">Full Capability</option>
                                        <option value="malware">Virus Total</option>
                                    </select>
                                </div>


                            </div>
                        </div>


                    </div>

                    <div class="panel panel-default">
                        <div class="panel-heading">
                            <h4 class="panel-title">
                                <a data-toggle="collapse" data-parent="#panelOptions" href="#chartSettings">Chart Settings</a>
                            </h4>
                        </div>
                        <div id="chartSettings" class="panel-collapse collapse">
                            <div class="panel-body">

                                <label class="control-label">Chart Name</label>
                                <div>
                                    <input type="text" class="form-control" id="chartName" onchange="updateOptions()" />
                                </div>
                                <p>(Press "Enter" when done)</p>

                                <label class="control-label">Date Range</label>
                                <div>
                                    <input type="text" class="form-control" id="startDate" onchange="updateOptions()" placeholder="Start" />
                                    <input type="text" class="form-control" id="endDate" onchange="updateOptions()" placeholder="End" />
                                </div>
                            </div>
                        </div>
                    </div>


                    <div class="panel panel-default">
                        <div class="panel-heading">
                            <h4 class="panel-title">
                                <a data-toggle="collapse" data-parent="#panelOptions" href="#otherOptions">Other Options</a>
                            </h4>
                        </div>
                        <div id="otherOptions" class="panel-collapse collapse">
                            <div class="panel-body">
                                <p>
                                    save, email etc options here
                                </p>
                            </div>
                        </div>
                    </div>

                </div>

            </div>
        </div>

    </div>
</div>

@Scripts.Render("~/bundles/jquery")
@Scripts.Render("~/bundles/bootstrap")

<script src="https://www.gstatic.com/charts/loader.js"></script>
<script src="~/Scripts/helpers/chart.js"></script>
<script src="~/Scripts/helpers/web.js"></script>